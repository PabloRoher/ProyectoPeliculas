<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="10dp"
        tools:context=".DetallePeliculaActivity">

        <!-- ImageView para la portada de la película -->
        <ImageView
            android:id="@+id/portadaImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc_portada" />

        <!-- TextView para el título de la película -->
        <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Título de la película" />

        <!-- TextView para el director de la película -->
        <TextView
            android:id="@+id/directorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Director: Nombre del director" />

        <!-- TextView para los actores -->
        <TextView
            android:id="@+id/actoresTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Actores:" />

        <!-- TextView para actor 1 -->
        <TextView
            android:id="@+id/actor1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Actor1" />

        <!-- TextView para actor 2 -->
        <TextView
            android:id="@+id/actor2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Actor2" />

        <!-- TextView para actor 3 -->
        <TextView
            android:id="@+id/actor3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Actor3" />


    </LinearLayout>

</ScrollView>
